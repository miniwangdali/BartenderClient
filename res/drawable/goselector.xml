<?xml version="1.0" encoding="utf-8"?>  
<selector  
    xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:state_pressed="true" >  
        <shape>  
            <!-- 渐变 -->  
            <gradient  
                android:startColor="#59e760"
                android:endColor="#3fcd3c"  
                android:type="linear"
                android:angle="90"  />  
            <!-- 描边 -->  
            <stroke  
                android:width="3dp"  
                android:color="#dcdcdc" />  
            <!-- 圆角 -->  
            <corners  
                android:radius="5dp" />
 
  
        </shape>  
    </item>  
    <item android:state_focused="true" >  
        <shape>  
            <gradient  
               	android:startColor="#59e760"
                android:endColor="#3fcd3c"  
                android:angle="90" />  
            <stroke  
                android:width="3dp"  
                android:color="#dcdcdc" />  
            <corners  
                android:radius="25dp" />   
        </shape>  
    </item>  
    <item>        
        <shape>  
            <gradient 
                android:startColor="#59e760"
                android:endColor="#3fcd3c"
                android:angle="270" />  
            <stroke  
                android:width="3dp"  
                android:color="#fad3cf" />  
            <corners  
                android:radius="5dp"  
            />  
  
        </shape>  
    </item>  
</selector>  