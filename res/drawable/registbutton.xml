<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />
            <padding 
                android:left="25dp"
                android:right="25dp"
                android:top="5dp"
                android:bottom="5dp" />
            <gradient 
                android:startColor="#59e760"
                android:endColor="#3fcd3c"
                android:angle="90" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="5dp" />
            <padding 
                android:left="25dp"
                android:right="25dp"
                android:top="5dp"
                android:bottom="5dp" />
            <gradient 
                android:startColor="#59e760"
                android:endColor="#3fcd3c"
                android:angle="90" />
        </shape>
    </item>
    <item >
        <shape>
            <corners android:radius="5dp" />
            <padding 
                android:left="25dp"
                android:right="25dp"
                android:top="5dp"
                android:bottom="5dp" />
            <gradient 
                android:startColor="#59e760"
                android:endColor="#3fcd3c"
                android:angle="270" />
        </shape>
    </item>
    

</selector>
