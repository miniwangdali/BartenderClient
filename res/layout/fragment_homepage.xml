<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f0f0" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="choose a bartender~"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:background="@drawable/zqlayoutshape"
        android:textSize="24sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="horizontal">
        
        <Button android:id="@+id/FaverateButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_margin="5dp"
		android:background="@drawable/chooseselector"
        android:text="My Faverate" />
        
        <Button android:id="@+id/coffeeButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_margin="5dp"
		android:background="@drawable/chooseselector"
        android:text="Coffee" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        
        android:orientation="horizontal">
        
        <Button android:id="@+id/teaButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_margin="5dp"
		android:background="@drawable/chooseselector"
        android:text="Tea" />
        
        <Button android:id="@+id/waterButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_margin="5dp"
		android:background="@drawable/chooseselector"
        android:text="Hot Water" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        
    </LinearLayout>

</LinearLayout>