<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f0e8" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/zqlayoutshape"
        android:text="choose your position~"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="horizontal">
        
        <Button android:id="@+id/driverSeatButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
		android:background="@drawable/chooseselector"
        android:text="Driver" />
        
        <Button android:id="@+id/codriverSeatButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
		android:background="@drawable/chooseselector"
        android:text="Co-Driver" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="horizontal">
        
        <Button android:id="@+id/rearLeftButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.4"
		android:background="@drawable/chooseselector"
        android:text="RearLeft" />
        
        <Button android:id="@+id/rearMidButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.2"
		android:background="@drawable/chooseselector"
        android:text="Mid" />
        
        <Button android:id="@+id/rearRightButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.4"
		android:background="@drawable/chooseselector"
        android:text="RearRight" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        
    </LinearLayout>

</LinearLayout>