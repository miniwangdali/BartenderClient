<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#66ccff" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="horizontal">
        
        <ImageButton android:id="@+id/driverSeatButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="I'm Driver" />
        
        <ImageButton android:id="@+id/codriverSeatButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="I'm Co-Driver" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="horizontal">
        
        <ImageButton android:id="@+id/rearLeftButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:text="I'm here!" />
        
        <ImageButton android:id="@+id/rearMidButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:text="I'm here!" />
        
        <ImageButton android:id="@+id/rearRightButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:text="I'm here!" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        
    </LinearLayout>

</LinearLayout>